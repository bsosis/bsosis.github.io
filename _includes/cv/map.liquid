<table class="table table-cv table-sm table-borderless table-responsive">
  {% for content in entry.contents %}
    <tr>
      <td class="p-1 pr-2 font-weight-bold">
        <b>{{ content.name }}</b>
      </td>
      {% if content.value %}
        {% comment %} <td class="p-1 pl-2 font-weight-light text">{{ content.value }}</td> {% endcomment %}
        <td class="p-1 pl-2 font-weight-medium text">{{ content.value }}</td>
      {% endif %}
      {% if content.links %}
        {% comment %} <td class="p-1 pl-2 font-weight-light text"> {% endcomment %}
        <td class="p-1 pl-2 font-weight-medium text">
          <div class="container-pdf">
            {% for item in content.links %}
              {% if item.link %}
                <div class="container-link-button">
                  {% if item.name %}
                    <a href="{{ item.link }}" target="_blank" class="btncv z-depth-0">{{ item.name }}</a>
                  {% else %}
                    <a href="{{ item.link }}" target="_blank" class="btncv z-depth-0">doc</a>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </td>
      {% endif %}
    </tr>
  {% endfor %}
</table>
